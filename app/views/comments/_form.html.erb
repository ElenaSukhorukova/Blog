<%= simple_form_for model, method: method do |f| %>
  <%= f.input :body, required: true, maxlength: 4000, 
    placeholder: attribute_model(f.object, :body), input_html: { class: 'mb-2' }  %>
  <%= f.input :status, collection: Comment::VALID_STATUES, as: :select, 
                       selected: Comment::VALID_STATUES[0] %>
  <div class="mt-2 mb-2">
    <%= f.button :submit, f.object.new_record? ? t('submit.new') : t('submit.edit') %>
    <%= render partial: 'shared/cancel_button', locals: { path: commentable_path(f.object) } if f.object.persisted? %>
  </div>
<% end %>