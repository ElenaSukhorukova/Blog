<%= simple_form_for comment, method: method, url: url do |f| %>
  <%= f.input :body, required: true, maxlength: 4000, placeholder: Comment.human_attribute_name("body")  %>
  <%= f.select :status, Comment::VALID_STATUES.collect{|status| status }, 
    { selected: Comment::VALID_STATUES[0], class: "form-select form-select-sm" } %>
  <%= f.button :submit, submit, class: "btn btn-light" %> 
<% end %>